{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "daily-task",
  "title": "Daily Task",
  "description": "Focus on your daily tasks.",
  "icon": "icon.png",
  "author": "xnumb",
  "categories": [
    "Productivity",
    "Other"
  ],
  "keywords": [
    "daily",
    "task",
    "todo",
    "countdown"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Daily Task",
      "description": "Manage your daily tasks list.",
      "mode": "view"
    },
    {
      "name": "pause",
      "title": "Pause Task",
      "description": "Pause activated task",
      "mode": "view"
    },
    {
      "name": "menubar",
      "title": "Show Task Menu Bar",
      "description": "Show activated task on menu bar.",
      "mode": "menu-bar",
      "interval": "1m"
    }
  ],
  "preferences": [
    {
      "name": "sound",
      "description": "Play sound",
      "type": "dropdown",
      "required": true,
      "title": "Play Completion Sound",
      "default": "",
      "data": [
        {
          "title": "No Sound",
          "value": ""
        },
        {
          "title": "Submarine",
          "value": "Submarine"
        },
        {
          "title": "Tink",
          "value": "Tink"
        },
        {
          "title": "Ping",
          "value": "Ping"
        }
      ]
    },
    {
      "name": "confetti",
      "description": "Show confetti?",
      "type": "checkbox",
      "required": true,
      "default": true,
      "title": "Show Completion Confetti",
      "label": "show"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1",
    "@raycast/utils": "^1.4.8",
    "jotai": "^2.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
